<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="app.ui.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_to_sandbox"
            app:destination="@id/sandbox" />
    </fragment>

    <fragment
        android:id="@+id/sandbox"
        android:name="app.ui.sandbox.SandboxFragment"
        android:label="Sandbox"
        tools:layout="@layout/fragment_sandbox" />

</navigation>